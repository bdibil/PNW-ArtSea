{{!-- <div class="m-auto"> --}}

    <div class="card m-auto">
        <div class="card-header">
            <h2>Upload Art Form</h2>
        </div>
        <div id="art-form" class="card-body">
            <div class="divTable" >
                <div class="divTableBody">
                    <div class="divTableRow">
                        <div class="divTableCell right">
                            <label for="username-input-login">Art Title</label>
                        </div>
                        <div class="divTableCell left">
                            <input type="text" id="art-title" />
                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell">&nbsp;</div>
                        <div class="divTableCell">&nbsp;</div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell right">
                            <label for="dropdownMenuButton">Select Art Type</label>
                        </div>
                        <div class="divTableCell left">
                            <select id="artType"class="form-select" aria-label="Default select">
                              <option selected>Select menu</option>
                              <option value="1">Apothecary</option>
                              <option value="2">Ceramics</option>
                              <option value="3">Fiber Arts</option>
                              <option value="4">Home Decor</option>
                              <option value="5">Illustrations</option>
                              <option value="6">Jewelry</option>
                              <option value="7">Oddities</option>
                            </select>
                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell">&nbsp;</div>
                        <div class="divTableCell">&nbsp;</div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell right">
                            <label for="uploadButton">Upload Art Photo</label>
                        </div>
                        <div class="divTableCell left">
{{!--                             <input type="file" id="image_input" accept="image/png, image/jpg" name="filename" /> --}}
                            <button id="upload_widget" class="cloudinary-button">
                                Upload
                                <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
                                <script type="text/javascript">
                                    let uploadurl = ''; //Used in uploadArt.js
                                    var myWidget = cloudinary.createUploadWidget({
                                        cloudName: 'dq5xoyv5u',
                                        uploadPreset: 'kcgeddom',
                                        cropping: true,
                                        croppingAspectRatio: 1,
                                        showSkipCropButton: false,
                                    }, (error, result) => {
                                        console.log(error, result)
                                        if (!error && result && result.event === "success") {
                                            console.log('Done! Here is the image info: ', result.info);
                                            document.getElementById('statusBar').innerHTML=`<div class="alert alert-success alert-dismissible">
                                              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                              <strong>Success!</strong> Uploaded Image
                                            </div>`
                                            uploadurl = result.info.url;
                                            console.log(uploadurl);
                                        }
                                    })

                                    document.getElementById("upload_widget").addEventListener("click", function () {
                                        myWidget.open();
                                    }, false);
                                </script>
                                </input>
                            </button>
                            <div id="successText"></div>
                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell">&nbsp;</div>
                        <div class="divTableCell">&nbsp;</div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell">&nbsp;</div>
                        <div class="divTableCell left">
                            <button id="submitButton">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
{{!--         </form> --}}
    </div>
{{!-- </div> --}}

<script src="/js/uploadArt.js"></script>
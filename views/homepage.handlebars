<div class="gallery" style="width: 100%;">
     <div class="dropdownMenus col-md-12" style="width: max-content">
         <div class='form-field'>
             <label for='category'>Art Types</label>
             <select id='category' class='form-control'>
                 <option value="-1">Choose Art Types</option>
                 {{#each artTypes}}
                     <option value="{{@index}}">{{this}}</option>
                 {{/each}}
             </select>
         </div>
     </div>

     <div class="dropdownMenus col-md-12" style="width: max-content">
         <div class='form-field'>
             <label for='artists'>Artists</label>
             <select id='artists' class='form-control'>
                 <option value="0">Choose Artists</option>
                 {{#each artistNames}}
                     <option value='{{this.id}}'>{{this.name}}</option>
                 {{/each}}
             </select>
         </div>
     </div>

     <div class="dropdownMenus col-md-12" style="width: max-content">
          <div class='form-field'>
              <br><br>
              <button id="applyFilter">Apply Filter</button>
          </div>
     </div>
 </div>


